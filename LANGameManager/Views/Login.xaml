<Window x:Class="GameificClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameificClient"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelUser" Content="Username:" Grid.Column="1" HorizontalAlignment="Left" Width="66" Margin="0,49,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="textBoxUser" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" Width="228" Margin="0,28,0,0" Grid.RowSpan="2"/>
        <Label x:Name="labelPw" Content="Password:" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="3" Width="62" Margin="0,1,0,0"/>
        <PasswordBox x:Name="passwordBox" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" Width="228" Margin="0,1,0,0"/>
        <Button x:Name="buttonLogin"  Content="Login" HorizontalAlignment="Left" Margin="0,16,0,15" Grid.Row="5" Width="228" Grid.Column="1" Height="Auto" Click="Button_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" Grid.Column="1" HorizontalAlignment="Left" Margin="0,12,0,12" Grid.Row="6" Width="228" Height="Auto" IsCancel="True" Click="Button_Click_1"/>
        <Button x:Name="buttonRegister" Content="Register" Grid.Column="1" HorizontalAlignment="Left" Margin="0,9,0,9" Grid.Row="7" Width="228" Height="Auto" Click="buttonRegister_Click"/>
        <ProgressBar x:Name="pbLogin" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="22" Margin="-2,23,0,0" Grid.Row="4" VerticalAlignment="Top" Width="294" Grid.RowSpan="2" Visibility="Collapsed"/>
    </Grid>
</Window>
